{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off",
    "no-undef": "warn",
    "semi": ["error", "always"],
    "quotes": ["error", "single", { "avoidEscape": true }],
    "indent": ["error", 4],
    "no-trailing-spaces": "error",
    "eol-last": ["error", "always"]
  },
  "globals": {
    "Papa": "readonly",
    "ExcelJS": "readonly",
    "localforage": "readonly",
    "TEMPLATE_BASE64": "readonly"
  }
}
